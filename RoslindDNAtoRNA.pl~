#!/usr/bin/perl -w
#DNA into RNA
#Jenny McCarthy

use strict;
my $DNA; #DNA file
my $RNA; #new RNA

#the DNA file
$DNA = <STDIN>;

#print the DNA onto the screen
print "Here is the starting DNA:\n\n";
 
print "$DNA\n\n";
 
#Transcribe DNA to RNA
$RNA = $DNA;
 
$RNA =~ s/T/U/ig;
 
#print the RNA onto the screen
print "Here is the resulting RNA:\n\n";
 
print "$RNA\n";
 
exit;
 
