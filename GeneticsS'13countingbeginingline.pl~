#open the file and start the string
open (FILE, $ARGV[0]) or die "cannot open $ARGV [0] : $!";
for $string (<FILE>) {
	if ($string =~ m/^T/) {
	
	$string++; 
		print $string++;
	}
}
close (FILE);








