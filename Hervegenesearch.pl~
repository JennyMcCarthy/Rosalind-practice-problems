#!/usr/bin/perl -w
#Jenny McCarthy
#Finding Herve Gene in a sequence
use strict;
my $string ; #Dna file
my $Hervegene; #Herve Gene we are looking for

my $hervesseq = "";
my $substrherves = substr($hervesseq, 0, 200);

#open the file and stat a string

open (FILE, $ARGV[0]) or die "Cannot open $ARGV[0] : $!";
while ($string = <FILE>) {
	while ($string =~ /$substrherves/g) {
		$Hervegene++;
	}
}
close (FILE);
print "number of Herves genes $Hervegene\n";
print "$substrherves\n";
